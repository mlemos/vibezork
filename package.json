{
  "name": "vibezork",
  "version": "1.0.0",
  "description": "Zork text adventure game with AI-generated graphics and music",
  "main": "src/electron/main.js",
  "scripts": {
    "start": "concurrently \"npm run backend\" \"npm run electron\"",
    "backend": "node src/backend/server.js",
    "electron": "wait-on http://localhost:3001 && electron .",
    "electron:dev": "wait-on http://localhost:8080 && NODE_ENV=development electron .",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "webpack --mode=production",
    "build:electron": "electron-builder",
    "dev": "concurrently \"npm run backend\" \"npm run webpack:dev\" \"npm run electron:dev\"",
    "webpack:dev": "webpack serve --mode=development --port 8080",
    "test": "echo \"Phase 1 test: npm start should launch the app with 4 panels and backend connection\""
  },
  "keywords": [
    "electron",
    "zork",
    "ai",
    "game"
  ],
  "author": "VibeZork Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "babel-loader": "^9.1.0",
    "buffer": "^6.0.3",
    "concurrently": "^8.2.0",
    "css-loader": "^6.8.0",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "global": "^4.4.0",
    "html-webpack-plugin": "^5.5.0",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "style-loader": "^3.3.0",
    "util": "^0.12.5",
    "wait-on": "^7.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "node-fetch": "^2.7.0",
    "openai": "^5.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "replicate": "^1.0.1",
    "socket.io": "^4.7.0",
    "socket.io-client": "^4.7.0",
    "ws": "^8.13.0"
  }
}
